{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current Test File",
            "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
            "args": [
                "run",
                "${relativeFile}"
            ],
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "console": "integratedTerminal",
            "smartStep": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug generator",
            "runtimeExecutable": "npx",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "tsx",
                "src/index.ts",
                "--config",
                "tests/config-ts.json",
                "-v",
            ],
            "sourceMaps": true,
            "outputCapture": "std",
        }
    ]
}
